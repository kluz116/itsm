<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="view_incident_tree" model="ir.ui.view">
            <field name="name">ticket.incident.tree</field>
            <field name="model">cclog.incident</field>
             <field name="arch" type="xml">
                <tree string="Incidents">
                    <field name="title" />
                    <field name="description" />
                    <field name="state" />
                    <field name="start_date" />
                    <field name="service_id" />
                    <field name="service_subcategory_id"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="incident_request_form_view">
            <field name="name">ticket.incident.form</field>
            <field name="model">cclog.incident</field>
            <field name="arch" type="xml">
                <form string="Create Incident" create="false" edit="false">
                    <header>
                     <button name="%(cclog.wizard_assign_form_view)d"  states='N' string="Assign" class="btn btn-primary" type="action" groups ="cclog.portal_user,cclog.support_agents"/>
                    <button name="action_reassign" states='A' string="Re-Assign" class="btn btn-primary" type="object" groups ="cclog.support_agents"/>
                    <button name="%(cclog.wizard_pending_form_view)d" states='A' string="Pending" class="oe_highlight" type="action" groups ="cclog.support_agents"/>
                    <button name="%(cclog.wizard_resolve_form_view)d" states='A,P,RA' string="Resolve" class="oe_highlight" type="action" groups ="cclog.support_agents"/>
                    <button name="action_reopen" states='R' string="Re Open" class="oe_highlight" type="object" groups ="cclog.portal_user"/>
                    <button name="%(cclog.wizard_close_form_view)d" states='R' string="Close" class="oe_highlight" type="action" groups ="cclog.portal_user"/>
                    <!--<field name="state" widget="statusbar" statusbar_visible="N,A,RA,P,R,RO,C" />-->
                    </header>
                    <sheet>
                        <group>
                            <field name="title"/>
                        </group>
                         <group>
                            <field name="state" readonly="1" />
                        </group>
                        <group>
                            <field name="service_id"/>
                        </group>
                        <group>
                            <field name="service_subcategory_id"/>
                        </group>
                        <group>
                            <field name="start_date"  invisible="1"/>
                        </group>
                        <group>
                            <field name="description"/>
                        </group>
    
                    </sheet>
                </form>
            </field>
        </record>        
        <record model="ir.ui.view" id="ticket_incident_search_view">
            <field name="name">ticket.incident.search</field>
            <field name="model">cclog.incident</field>
            <field name="arch" type="xml">
                <search>
                    <field name="title" />
                    <field name="description" />
                    <field name="start_date" />
                    <field name="service_id" />
                    <field name="service_subcategory_id"/>
                    <field name="end_date" />
                    <field name="team_id"/>
                    <field name="agent_id"/>
                    <field name="state" />
                    <field name="close_date"/>
                           <separator/>
                     <filter name="start_dayss" string="Today" domain="[('start_date', '&gt;=', datetime.datetime.now().strftime('%Y-%m-%d 00:00:00'))]" />
         
                </search>
            </field>
        </record>


        <record model="ir.actions.act_window" id="incident_list_action">
            <field name="name">Incident Ticket</field>
            <field name="res_model">cclog.incident</field>
            <field name="view_mode">tree,form</field>
             <field name ="context">{"search_default_start_date":1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Create new incident</p>
            </field>
        </record>
        
        <menuitem id="main_service_menu" name="cclog"/>
        <menuitem id="incident_menu" name="Incident Managment" parent="main_service_menu"/>
        <menuitem id="ticket_incidents" name="Incident Requests" parent="incident_menu" action="incident_list_action"/>
        
    
</odoo>