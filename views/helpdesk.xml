        <record model="ir.ui.view" id="resolve_ticket_request_form_view">
            <field name="name">resolve.request.form</field>
            <field name="model">cclog.ticketresolve</field>
            <field name="arch" type="xml">
                <form string="Resolve Ticket" create="false" edit="false">
                    <sheet>
                        <group>
                            <field name="resolution_comment"/>
                        </group>
                        <group>
                            <field name="resolution_date"  invisible="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="pending_ticket_request_form_view">
            <field name="name">pending.request.form</field>
            <field name="model">cclog.ticketpending</field>
            <field name="arch" type="xml">
                <form string="Pending" create="false" edit="false">
                    <sheet>
                        <group>
                            <field name="pending_comment"/>
                        </group>
                        <group>
                            <field name="pending_date"  invisible="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="close_ticket_request_form_view">
            <field name="name">close.request.form</field>
            <field name="model">cclog.ticketclosed</field>
            <field name="arch" type="xml">
                <form string="Close" create="false" edit="false">
                    <sheet>
                        <group>
                            <field name="rating"/>
                        </group>
                        <group>
                            <field name="closing_date"  invisible="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record model="ir.ui.view" id="ticket_request_search_view">
            <field name="name">ticket.request.search</field>
            <field name="model">ticket.request</field>
            <field name="arch" type="xml">
                <search>
                    <field name="title" />
                    <field name="description" />
                    <field name="start_date" />
                    <field name="service_id" />
                    <field name="service_subcategory_id"/>
                    <field name="end_date" />
                 
                    <field name="state" />
                </search>
            </field>
        </record>


        <record model="ir.actions.act_window" id="request_list_action">
            <field name="name">Request Ticket</field>
            <field name="res_model">ticket.request</field>
            <field name="view_mode">tree,form</field>
             <field name ="context">{"search_default_start_date":1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Create new request</p>
            </field>
        </record>

     
        
        <menuitem id="main_service_menu" name="cclog"/>
        <menuitem id="helpdesk_menu" name="Request Ticket" parent="main_service_menu"/>
        <menuitem id="ticket_requests" name="Requests" parent="helpdesk_menu" action="request_list_action"/>
        
</odoo>