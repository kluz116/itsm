<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="view_helpdesk_tree" model="ir.ui.view">
            <field name="name">ticket.request.tree</field>
            <field name="model">ticket.request</field>
             <field name="arch" type="xml">
                <tree string="All Requests">
                    <field name="title" />
                    <field name="description" />
                    <field name="state" />
                    <field name="start_date" />
                    <field name="service_id" />
                    <field name="service_subcategory_id"/>
                    <field name="team_id"/>
                    <field name="agent_id"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="ticket_request_form_view">
            <field name="name">ticket.request.form</field>
            <field name="model">ticket.request</field>
            <field name="arch" type="xml">
                <form string="Create Request" create="false" edit="false">
                    <header>
                    <button name="%(itsm.wizard_requests_assign_form_view)d" type="action" states='N' string="Assign" class="btn btn-primary" groups ="itsm.support_agents" />
                    <button name="%(itsm.wizard_requests_assign_form_view)d" states='A' string="Re-Assign" class="btn btn-primary" type="action" groups ="itsm.support_agents"/>
                    <button name="%(itsm.wizard_requests_pending_form_view)d" states='A' string="Pending" class="oe_highlight" type="action" groups ="itsm.support_agents"/>
                    <button name="%(itsm.wizard_requests_resolve_form_view)d" states='A,P,RA' string="Resolve" class="oe_highlight" type="action" groups ="itsm.support_agents"/>
                    <button name="action_reopen" states='R' string="Re Open" class="oe_highlight" type="object" groups ="itsm.portal_user"/>
                    <button name="%(itsm.wizard_requests_close_form_view)d" states='R' string="Close" class="oe_highlight" type="action" groups ="itsm.portal_user"/>
                    <field name="state" widget="statusbar" statusbar_visible="N,A,RA,P,R,RO,C" invisible="1"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="title"/>
                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                         <group>
                            <field name="state" readonly="1" />
                        </group>
                        <group>
                            <field name="service_id"/>
                        </group>
                        <group>
                            <field name="service_subcategory_id"/>
                        </group>
                        <group>
                            <field name="start_date"  invisible="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
