<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="view_helpdesk_tree" model="ir.ui.view">
            <field name="name">cclog.request.tree</field>
            <field name="model">cclog.request</field>
             <field name="arch" type="xml">
                <tree string="All Requests">
                    <field name="title" />
                    <field name="state" />
                    <field name="start_date" />
                    <field name="service_id" />
                    <field name="service_subcategory_id"/>
                    <field name="branch_id"/>
                    <field name="agent"/>
                    
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="ticket_request_form_view">
            <field name="name">cclog.request.form</field>
            <field name="model">cclog.request</field>
            <field name="arch" type="xml">
                <form string="Create Request" create="false" edit="false">
                    <header>
                    <button name="%(itsm.wizard_assign_form_view_reassign)d" states='A' string="Re Assign Ticket" class="btn btn-success" type="action" />
                    <button name="%(itsm.wizard_requests_pending_form_view)d" states='A' string="Mark Pending" type="action" class="btn btn-warning"  />
                    <button name="%(itsm.wizard_requests_resolve)d" states='A,P,RA,RO' string="Resolve Ticket" class="btn btn-primary" type="action" />
                    <button name="action_reopen" states='R' string="Re Open Ticket" class="btn btn-primary" type="object"/>
                    <button name="%(itsm.wizard_requests_close_form_view)d" states='R' string="Close Ticket" class="btn btn-danger" type="action" />
                    <field name="state" widget="statusbar" statusbar_visible="N,A,RA,P,R,RO,C" />
                    </header>
                    <sheet>
                          <group>
                            <field name="service_id"/>
                        </group>
                        <group>
                            <field name="service_subcategory_id"/>
                        </group>
                        <group>
                            <field name="client_id"/>
                        </group>
                        <group>
                            <field name="branch_id"/>
                        </group>
                        <group>
                            <field name="agent"/>
                        </group>
                        <group>
                            <field name="title"/>
                        </group>
                        
                        <group>
                            <field name="trx_proof"/>
                            <field name="description"/>
                        </group>
            
                        <group>
                            <field name="start_date"  invisible="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="ticket_request_search_view">
            <field name="name">cclog.request.search</field>
            <field name="model">cclog.request</field>
            <field name="arch" type="xml">
                <search>
                    <field name="title" />
                    <field name="description" />
                    <field name="branch_id" />
                </search>
            </field>
        </record>


        <record model="ir.actions.act_window" id="request_list_action">
            <field name="name">Customer Tickets</field>
            <field name="res_model">cclog.request</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Customer Tickets</p>
            </field>
        </record>

        <menuitem id="main_service_menu" name="cclog"/>
        <menuitem id="helpdesk_menu" name="Customer Tickets" sequence="1" parent="main_service_menu"/>
        <menuitem id="ticket_requests" name="Requests" parent="helpdesk_menu" action="request_list_action"/>
        
</odoo>