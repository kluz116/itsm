<?xml version="1.0"?>
<odoo>
        <record id="assign_requests_ticket_view_form_wizard" model="ir.ui.view">
            <field name="name">itsm.assign_requests_tickets_wizard.form</field>
            <field name="model">itsm.assign_requests_tickets_wizard</field>
            <field name="arch" type="xml">
                <form string="Assign Request">
                    <group class="oe_title">
                         <field name="state" readonly="1" />
                         <field name="team_id"/>
                         <field name="agent_id"/>
                    </group>
                    <footer>
                        <button name="action_requests_assign_agent" string="Assign" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="wizard_requests_assign_form_view" model="ir.actions.act_window">
            <field name="name">Assign Request</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">itsm.assign_requests_tickets_wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="assign_requests_ticket_view_form_wizard"/>
            <field name="target">new</field>
        </record>
</odoo>
